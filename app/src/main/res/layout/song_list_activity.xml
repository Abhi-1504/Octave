<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/song_image"
        android:layout_width="@dimen/image_size_in_song_list"
        android:layout_height="@dimen/image_size_in_song_list"
        android:layout_marginBottom="@dimen/song_artist_spacing"
        android:layout_marginLeft="@dimen/image_spacing"
        android:layout_marginStart="@dimen/image_spacing"
        android:layout_marginTop="@dimen/image_spacing" />

    <LinearLayout
        android:layout_width="@dimen/zero_dimension_for_layout_weight"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="@android:color/black"
        android:orientation="vertical">

        <TextView
            android:id="@+id/song_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/song_artist_spacing"
            android:layout_marginStart="@dimen/text_spacing"
            android:layout_marginTop="@dimen/text_spacing"
            android:textColor="@android:color/white"
            android:textSize="@dimen/song_name_text_size" />

        <TextView
            android:id="@+id/artist_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/song_artist_spacing"
            android:layout_marginLeft="@dimen/song_artist_spacing"
            android:layout_marginStart="@dimen/text_spacing"
            android:layout_marginTop="@dimen/song_artist_spacing"
            android:textColor="@android:color/white"
            android:textSize="@dimen/artist_name_text_size" />


    </LinearLayout>

    <TextView
        android:id="@+id/song_duration"
        android:layout_width="@dimen/zero_dimension_for_layout_weight"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/text_spacing"
        android:layout_marginLeft="@dimen/text_spacing"
        android:layout_marginStart="@dimen/text_spacing"
        android:layout_marginTop="@dimen/text_spacing"
        android:layout_weight="1"
        android:gravity="right"
        android:paddingRight="@dimen/song_duration_right_spacing"
        android:textColor="@android:color/white"
        android:textSize="@dimen/song_duration_text_size" />

</LinearLayout>